DROP TABLE IF EXISTS turno CASCADE;

CREATE TABLE turno
(
	id_turno INTEGER NOT NULL,
	hora_inicio VARCHAR(5) NOT NULL,
	hora_fin VARCHAR(5) NOT NULL,
	estado_turno BOOLEAN NOT NULL,

	CONSTRAINT turno_pk PRIMARY KEY (id_turno)
);


DROP TABLE IF EXISTS bus CASCADE;

CREATE TABLE bus
(
	placa_bus VARCHAR(20) NOT NULL,
	modelo VARCHAR(4),
	marca VARCHAR(20),
	capacidad INTEGER,
	tipo VARCHAR(13) NOT NULL,		
	estado_bus BOOLEAN NOT NULL,

	CONSTRAINT bus_pk PRIMARY KEY (placa_bus)
);

